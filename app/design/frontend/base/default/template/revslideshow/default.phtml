$storeId = Mage::app()->getStore()->getId();
$status = Mage::getStoreConfig('revslideshow/general/enabled', $storeId);
$data = $this->getSlideshows();
?>
<?php if($status):?>

<div class="loading-graphic home-loader">
    <i class="fa fa-spin fa-cog fa-5x"></i>
</div>
